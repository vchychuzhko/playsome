{
    "name": "playsome",
    "dependencies": {
        "@symfony/webpack-encore": "^1.8.2",
        "core-js": "^3.22.0",
        "regenerator-runtime": "^0.13.2",
        "sass": "^1.50.0",
        "sass-loader": "^12.6.0",
        "webpack-notifier": "^1.6.0"
    },
    "devDependencies": {
        "eslint": "^8.13.0",
        "postcss-scss": "^4.0.3",
        "stylelint": "^14.5.1",
        "stylelint-config-standard": "^25.0.0"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev-server": "encore dev-server",
        "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore assets",
        "lint:style": "stylelint \"assets/**/*.{css,scss,sass,vue}\" --ignore-path .gitignore",
        "lint": "npm run lint:js && npm run lint:style",
        "lintfix": "npm run lint:js -- --fix && npm run lint:style -- --fix",
        "dev": "encore dev",
        "watch": "encore dev --watch",
        "build": "encore production --progress"
    }
}
