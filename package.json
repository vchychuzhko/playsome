{
    "name": "playsome",
    "dependencies": {
        "@symfony/webpack-encore": "^4.5.0",
        "core-js": "^3.23.0",
        "regenerator-runtime": "^0.13.9",
        "sass": "^1.69.5",
        "sass-loader": "^13.3.2",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-notifier": "^1.15.0"
    },
    "devDependencies": {
        "eslint": "^8.54.0",
        "postcss-scss": "^4.0.9",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev-server": "encore dev-server",
        "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore assets",
        "lint:style": "stylelint \"assets/**/*.{css,scss,sass,vue}\" --ignore-path .gitignore",
        "lint": "npm run lint:js && npm run lint:style",
        "lintfix": "npm run lint:js -- --fix && npm run lint:style -- --fix",
        "dev": "encore dev",
        "watch": "encore dev --watch",
        "build": "encore production --progress"
    }
